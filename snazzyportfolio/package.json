{
  "scripts": {
    "tw:build": "npx tailwindcss -i ./src/input.css -o ./build/output.css --minify",
    "tw:dev:build": "npx tailwindcss -i ./src/input.css -o ./build/output.css",
    "tw:watch": "npx tailwindcss -i ./src/input.css -o ./build/output.css --watch",
    "wp:blocks": "wp-scripts start --experimental-modules --output-path=blocks/build --webpack-src-dir=blocks/src",
    "start": "wp-scripts start"
  },
  "devDependencies": {
    "@wordpress/scripts": "^30.1.0",
    "tailwindcss": "^3.4.13"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  }
}
