{
  "scripts": {
    "tw:build": "npx tailwindcss -i ./lib/styles/theme/input.css -o ./lib/styles/theme/output.css",
    "tw:dev:build": "npx tailwindcss -i ./lib/styles/theme/input.css -o ./lib/styles/theme/output.css",
    "tw:watch": "npx tailwindcss -i ./lib/styles/theme/input.css -o ./lib/styles/theme/output.css --watch",
    "wp:blocks": "wp-scripts start --experimental-modules --output-path=blocks/build --webpack-src-dir=blocks/src",
    "start": "wp-scripts start"
  },
  "devDependencies": {
    "@wordpress/scripts": "^30.1.0",
    "babel-plugin-prismjs": "^2.1.0",
    "tailwindcss": "^3.4.13"
  },
  "dependencies": {
    "@wordpress/interactivity": "^6.17.0",
    "clsx": "^2.1.1",
    "prismjs": "^1.29.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "prismjs",
        {
          "languages": [
            "markup",
            "php",
            "js",
            "json",
            "css",
            "scss",
            "tsx",
            "bash",
            "csharp",
            "java",
            "python",
            "sql",
            "yaml",
            "jsx",
            "ts",
            "django",
            "docker",
            "git",
            "go",
            "md",
            "nginx",
            "php",
            "sh"
          ],
          "plugins": [
            "line-numbers",
            "show-language"
          ],
          "theme": "tomorrow",
          "css": true
        }
      ]
    ]
  }
}
